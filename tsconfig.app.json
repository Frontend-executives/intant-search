{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/modules/core/*"],
      "@search/*": ["./src/modules/search/*"],
      "@auth/*": ["./src/modules/auth/*"],
      "@duplicate/*": ["./src/modules/duplicate/*"],
      "@invalid-replacement/*": ["./src/modules/invalid-replacement/*"],
      "@obsolete-without-replacement/*": ["./src/modules/obsolete-without-replacement/*"],
      "@relevant-with-replacement/*": ["./src/modules/relevant-with-replacement/*"],
      "@self-replacement/*": ["./src/modules/self-replacement/*"],
      "@without-brand/*": ["./src/modules/without-brand/*"]
    }
  }
}
